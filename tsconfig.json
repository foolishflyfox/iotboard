{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mimic/*": ["./src/views/mimic/*"],
      "@foxui/*": ["packages/fox-ui/*"]
    },
    // "module": "ESNext",
    "noImplicitAny": false
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "packages/**/*"],
  "exclude": ["src/**/__tests__/*"]
}
